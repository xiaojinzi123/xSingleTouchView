<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XSingleTouchView">
        <!--四个控制点的图片-->
        <attr name="src_lt" format="reference" />
        <attr name="src_lb" format="reference" />
        <attr name="src_rt" format="reference" />
        <attr name="src_rb" format="reference" />
        <!--控制点的大小-->
        <attr name="control_size" format="dimension"/>
        <!--控制点的缩放比-->
        <attr name="control_size_scale" format="float"/>
        <!--中间的大图-->
        <attr name="src" format="reference" />
        <!--边缘线的宽度和颜色-->
        <attr name="line_width" format="dimension" />
        <attr name="line_color" format="color" />
        <!--图的大小-->
        <attr name="image_width" format="dimension" />
        <attr name="image_height" format="dimension" />
        <!--初始化的位置-->
        <attr name="gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
            <enum name="left_top" value="5" />
            <enum name="right_top" value="6" />
            <enum name="left_bottom" value="7" />
            <enum name="right_bottom" value="8" />
        </attr>
    </declare-styleable>
</resources>